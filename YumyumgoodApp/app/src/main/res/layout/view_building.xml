<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewBuilding">

    <ImageView
        android:layout_marginStart="135dp"
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A1A1A1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="309 관"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": 최고에요!😍"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/review1"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:layout_width="380dp"
                android:layout_height="160dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/userInfo1"
                        android:layout_margin="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/userPicture1"
                            android:src="@drawable/user"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/userID1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="abc123"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/menu_likes1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/userInfo1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#92CBF1"
                            android:padding="3dp"
                            android:layout_margin="8dp"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:text="토마토 스파게티"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#92CBF1"
                            android:padding="3dp"
                            android:layout_margin="8dp"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:text="베이컨 피자"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#FB9186"
                            android:padding="3dp"
                            android:layout_margin="8dp"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:text="불닭 마요"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/menu_likes1">

                        <TextView
                            android:layout_width="340dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="토마토 스파게티 완전 맛있어요. 가성비 최고! "/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/review2"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:layout_width="380dp"
                android:layout_height="160dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/userInfo2"
                        android:layout_margin="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/userPicture2"
                            android:src="@drawable/user"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/userID2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="qwerty12"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/menu_likes2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/userInfo2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#FB9186"
                            android:padding="3dp"
                            android:layout_margin="8dp"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:text="까르보나라"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#92CBF1"
                            android:padding="3dp"
                            android:layout_margin="8dp"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:text="불고기 피자"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#92CBF1"
                            android:padding="3dp"
                            android:layout_margin="8dp"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:text="치킨 텐더 버거"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/menu_likes2">

                        <TextView
                            android:layout_width="340dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="까르보나라가 조금 느끼했다. 시설은 여기가 제일 깨끗하다."/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/review3"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:layout_width="380dp"
                android:layout_height="160dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/userInfo3"
                        android:layout_margin="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/userPicture3"
                            android:src="@drawable/user"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/userID3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="helloCau10"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/menu_likes3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/userInfo3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#92CBF1"
                            android:padding="3dp"
                            android:layout_margin="8dp"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:text="치즈 돈까스"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#92CBF1"
                            android:padding="3dp"
                            android:layout_margin="8dp"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:text="토마토 스파게티"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/menu_likes3">

                        <TextView
                            android:layout_width="340dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="제일 좋아하는 학식당! 모든 메뉴 다 최고에요. 가격대비 매우 만족합니다."/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>






        </LinearLayout>

    </ScrollView>

</LinearLayout>