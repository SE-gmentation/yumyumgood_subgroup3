<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginLeft="135dp"
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A1A1A1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰 작성"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginLeft="174dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="학식 건물" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:text=" : 308 관 " />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:text="주문 메뉴" />

        <LinearLayout
            android:id="@+id/menu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="토마토 스파게티" />

            <ImageButton
                android:id="@+id/like1"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="30dp"
                android:src="@drawable/thumbs_up"/>

            <ImageButton
                android:id="@+id/dislike1"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/thumbs_down" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="126dp"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="베이컨 피자" />

            <ImageButton
                android:id="@+id/like2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="30dp"

                android:src="@drawable/thumbs_up"/>

            <ImageButton
                android:id="@+id/dislike2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/thumbs_down" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="109dp"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="불닭 마요 덮밥" />

            <ImageButton
                android:id="@+id/like3"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="30dp"

                android:src="@drawable/thumbs_up"/>

            <ImageButton
                android:id="@+id/dislike3"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/thumbs_down" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:text="리뷰 작성" />

        <EditText
            android:id="@+id/writer"
            android:layout_width="335dp"
            android:layout_height="190dp"
            android:background="@drawable/review_border"
            android:maxLength="300"
            android:gravity="top"
            android:hint="주문한 메뉴와 식당의 시설은 어떠셨나요? "
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:hint="  / 300 "
            android:textSize="14dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/submit_review"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="리뷰 제출"
        android:layout_marginLeft="264dp"
        android:background="#97C7ED"/>


</LinearLayout>